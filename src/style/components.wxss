.menu-modal {
    /*top: 125%;*/
    /*right: -10rpx;*/
    top: 80rpx;
    right: 18rpx;

    width: 220rpx;

    padding: 0 20rpx;

    color: #868d92;
    background: #fff;
    border-radius: 4rpx;
}

.menu-modal::before {
    content: " ";
    display: block;
    height: 0;
    width: 0;

    position: absolute;
    top: -14%;
    right: 13rpx;

    border-width: 20rpx;
    border-style: solid solid solid solid;
    border-color: transparent transparent #fff transparent;
}

.menu-modal-item {
    padding: 20rpx 20rpx;
}

.menu-modal-item-icon {
    margin-right: 20rpx;
}

.icon-caret {
    width: 16rpx;
    height: 16rpx;

    border-right: 2rpx solid #fff;
    border-bottom: 2rpx solid #fff;

    transform: rotate(45deg);
}

